{
  "name": "okclaire",
  "version": "0.2.0",
  "description": "Bot for Real Estate",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "postinstall": "typings install",
    "start": "node dist/main.js",
    "clean": "rimraf .nyc_output coverage dist",
    "build": "tsc",
    "watch": "(npm run build -- --watch &) && sleep 5 && nodemon -w dist dist/main.js",
    "repl": "(npm run build -- --watch &) && sleep 5 && nodemon -w dist dist/repl.js",
    "deploy": "npm run build && modulus deploy -p okclaire",
    "lint": "eslint src",
    "test": "(npm run build -- --watch &) && sleep 5 && ava --watch",
    "coverage": "npm run build && nyc ava",
    "report": "nyc report --reporter=html"
  },
  "dependencies": {
    "bluebird": "3.4.1",
    "forecast-io": "1.0.2",
    "googlemaps": "1.11.1",
    "got": "6.3.0",
    "koa": "2.0.0",
    "koa-router": "7.0.1",
    "mixpanel": "0.4.0",
    "mongoose": "4.5.8",
    "morgan": "1.7.0",
    "raw-body": "2.1.7",
    "source-map-support": "0.4.2",
    "winston": "2.2.0"
  },
  "devDependencies": {
    "ava": "0.16.0",
    "espower": "1.3.2",
    "mockgoose": "6.0.6",
    "nyc": "8.0.0",
    "rimraf": "2.5.4",
    "supertest": "2.0.0",
    "supertest-as-promised": "4.0.0",
    "typescript": "2.0.0",
    "typings": "1.3.2"
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ],
    "source": [
      "dist/**/*.js"
    ],
    "concurrency": 5,
    "require": [
      "babel-register",
      "./dist/utils/test-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "require": [
      "babel-register",
      "./dist/utils/test-register"
    ],
    "include": [
      "src"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
